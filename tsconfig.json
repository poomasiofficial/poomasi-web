{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "ignoreDeprecations": "5.0", // optional
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@api/*": [
        "api/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@store/*": [
        "store/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@toast": [
        "toast/index.ts"
      ],
      "@types": [
        "types/index.ts"
      ],
      // "@types/*": ["types/*"],
      "@public/*": [
        "public/*"
      ],
      "@images/*": [
        "assets/images/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@landingPage/*": [
        "components/landingPage/*"
      ],
      "@qnaPage/*": [
        "components/qnaPage/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "./.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
